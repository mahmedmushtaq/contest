<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="5dp"
    android:id="@+id/searchRvLayoutLl"
    android:orientation="horizontal">




        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/search_profilePic"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            app:civ_border_color="#000000"
            app:civ_border_width="0dp"
            app:civ_shadow="false"
            app:civ_shadow_radius="1"
            app:civ_shadow_color="#000000"/>

        <LinearLayout
            android:id="@+id/userNameAndName_searchLl"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">
            <com.contest.competition.utils.views.HeadingTv
                android:id="@+id/search_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hello World"
                android:layout_gravity="center_vertical"/>


            <com.contest.competition.utils.views.QuickSandRegularTv
                android:id="@+id/search_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="M Ahmed_mushtaq"/>

        </LinearLayout>


        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical">
        <ImageView
            android:id="@+id/search_userAddFollow"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/add_follow"
            android:visibility="gone"
            android:layout_gravity="center_vertical"/>

            <ProgressBar
                android:id="@+id/search_userAddFollowPB"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:visibility="gone"
                android:layout_gravity="center"/>


        </FrameLayout>


        <ImageView
            android:id="@+id/search_userCannotFollow"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/lock"
            android:visibility="gone"
            android:layout_gravity="center_vertical"/>




        <ImageView
            android:id="@+id/search_userFollowed"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:visibility="gone"
            android:src="@drawable/accept"
            android:layout_gravity="center_vertical"/>









</LinearLayout>



