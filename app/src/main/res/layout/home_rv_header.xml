<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.CardView  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="3dp"
    android:layout_marginRight="3dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="5dp"
    android:elevation="5dp"
   >


    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/homeHeaderProfile"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:civ_border="true"
        app:civ_border_width="1dp"
        app:civ_border_color="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        />


    <com.contest.competition.utils.views.QuickSandRegularTv
        android:id="@+id/createNewContestHomeTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        app:layout_constraintLeft_toRightOf="@+id/homeHeaderProfile"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Create New Contests"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:textSize="20sp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout></androidx.appcompat.widget.CardView>