<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".utils.activities.accountsettingsactivities.UpdateNameOnly">

    <com.contest.competition.utils.views.QSRegularEt
        android:id="@+id/new_email_update_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="30dp"
        android:paddingTop="30dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"

        android:textColorHint="@color/wetAsphalt"
        android:hint="Enter your new email"
        android:textColor="@color/black"
        />


    <Button
        android:id="@+id/update_new_email_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/app_theme_drawable"
        android:text="@string/update"
        android:padding="15dp"/>

</LinearLayout>