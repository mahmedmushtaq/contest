<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/not_followReq_Ll">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/not_followReq_profile"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
          <com.contest.competition.utils.views.HeadingTv
              android:id="@+id/not_followReq_tv"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:textColor="@color/black"
              android:padding="5dp"
              android:textSize="25sp"
              android:text="Ahmed wants you to f"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">

                <com.contest.competition.utils.views.RalewayBoldButton
                    android:id="@+id/not_followReq_acceptBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginRight="2dp"
                    android:layout_marginEnd="2dp"
                    android:text="Accept"
                    android:textSize="22sp"
                    android:background="@color/darkBlue"/>


                <com.contest.competition.utils.views.RalewayBoldButton
                   android:id="@+id/not_followReq_cancelBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="2dp"
                    android:layout_marginStart="2dp"
                    android:text="Cancel"
                    android:textSize="22sp"
                    android:background="@drawable/requested_btn"/>


            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>