<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_theme_drawable"
    android:fillViewport="true"

    xmlns:fancy="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        >
        <ImageView
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:src="@drawable/logo"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            />

        <com.contest.competition.utils.views.MonserratBoldTv

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contest"
            android:textColor="@color/white"
            android:textSize="34sp"
            android:paddingTop="5dp"
            android:gravity="center_horizontal"
            />



        <com.contest.competition.utils.views.MonserratLightTv

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="You are one step away from being"
            android:textColor="@color/white"
            android:textSize="28sp"
            android:paddingTop="4dp"
            android:gravity="center_horizontal"
            />
        <com.contest.competition.utils.views.MonserratLightTv

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="FAMOUS !"
            android:textSize="28sp"
            android:gravity="center_horizontal"
            android:textColor="@color/white"/>




        <com.contest.competition.utils.views.MonserratBoldTv

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirm Email"
            android:textSize="32sp"
            android:textColor="@color/white"
            android:gravity="center_horizontal"
            android:layout_marginTop="20dp"
            />



        <com.contest.competition.utils.views.RalewayBoldEt
            android:id="@+id/email_cnfrm_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"

            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:paddingRight="20dp"
            android:textSize="28sp"
            android:hint="Enter your confirmation code"
            android:inputType="textEmailAddress"

            android:textColor="@color/white"
            android:textColorHint="@color/lightCloudy"
            android:backgroundTint="@color/white"
            />












        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:padding="10dp"

            >


            <com.contest.competition.utils.views.RalewayBoldTv
                android:id="@+id/sendAgain_cnfrmEmailCodeTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Send again"
                android:layout_marginLeft="18dp"
                android:textColor="@color/white"
                android:textSize="24sp"/>

            <Button
                android:id="@+id/cnfrmEmail_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:layout_marginLeft="30dp"
                android:textSize="24sp"
                android:text="Confirm"
                android:stateListAnimator="@null"
                android:elevation="5dp"

                android:background="@drawable/white_bg_round"
                android:textColor="@color/app_theme_second_color"/>


        </LinearLayout>



        <com.contest.competition.utils.views.MonserratBoldTv
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="5dp"
            android:textSize="25sp"
            android:textColor="@color/darkWhite"
            android:text="Regards:"/>

        <com.contest.competition.utils.views.HeadingTv
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:padding="5dp"
            android:textColor="@color/lightCloudy"
            android:text="If email is not shown in your inbox then check email in spams email Or wait 4 to 5 min.(Thanks)"/>




    </LinearLayout>


</ScrollView>